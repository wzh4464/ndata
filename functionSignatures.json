{
    "_schemaVersion": "1.0.0",
    "cocluster": {
        "inputs": [
            {
                "name": "X",
                "kind": "required",
                "type": [
                    "numeric"
                ],
                "purpose": "Input Matrix"
            },
            {
                "name": "max_iter",
                "kind": "ordered",
                "type": [
                    "numeric"
                ],
                "purpose": "Maximum number of iterations",
                "default": "10000"
            },
            {
                "name": "tol",
                "kind": "ordered",
                "type": [
                    "numeric"
                ],
                "purpose": "Tolerance",
                "default": "1e-4"
            }
        ],
        "outputs": [
            {
                "name": "row_cluster",
                "purpose": "Row labels"
            },
            {
                "name": "col_cluster",
                "purpose": "Column labels"
            }
        ]
    }
}